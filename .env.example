# ===== BYBIT API КЛЮЧІ =====
# Отримайте на: https://www.bybit.com/ (для live) або https://testnet.bybit.com/ (для testnet)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# ===== РЕЖИМ ТОРГІВЛІ =====
# False для LIVE торгівлі з реальними грішми, True для testnet
TESTNET=False

# ===== TELEGRAM ОПОВІЩЕННЯ =====
# Створіть бота через @BotFather в Telegram
# Chat ID отримайте через @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===== НАЛАШТУВАННЯ ТОРГІВЛІ =====
# Розмір кожної позиції в USDT (маржа)
ORDER_SIZE_USDT=5.0

# Кредитне плече (1-125, обережно з високими значеннями!)
LEVERAGE=25

# Максимальна кількість одночасних позицій
MAX_POSITIONS=5

# Таймфрейм для аналізу (1m, 3m, 5m, 15m, 1h, 4h)
# При 1m: ATR=7, RSI=3 (швидкий скальпінг)
# При 3m: ATR=10, RSI=4 (середній)
# При 5m+: ATR=14, RSI=5 (стандарт)
TIMEFRAME=5m

# ===== УПРАВЛІННЯ РИЗИКАМИ =====
# Мінімальний профіт у відсотках (гарантовано!)
MIN_PROFIT_PERCENT=0.5

# Мінімальний баланс для запуску бота (USDT)
MIN_BALANCE_USDT=15.0

# ===== PRO ФУНКЦІЇ =====
# Cooldown (секунди) - захист від подвійного входу на одній парі
COOLDOWN_SECONDS=120
